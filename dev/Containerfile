FROM alpine:latest
MAINTAINER "hikib <hikib@proton.me>"

# ---- SETUP
ENV TZ=Europe/Copenhagen
RUN apk add --no-cache sudo \
    && adduser -S hikib \
    && echo "hikib ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers
User hikib

# ---- APPS
RUN sudo apk update && sudo apk add --no-cache \
    bash \
    bash-completion \
    curl \
    git \
    gzip \
    less \
    less-doc \
    mandoc-apropos \
    man-pages \
    neovim \
    nodejs-current \
    npm \
    py3-pip \
    python3 \
    ripgrep \
    shellcheck \
    tmux \
    tree \
    tzdata \
    unzip \
    w3m \
    wget \
    yarn

# ---- CONFIG
WORKDIR /dotfiles
RUN sudo git clone https://github.com/hikib/scripts \
    && sudo git clone https://github.com/hikib/dot \
    && ./dot/uni.bash/setup.sh \
    && ./dot/uni.nvim/setup.sh \
    && ./dot/uni.tmux/setup.sh \
    && ./dot/uni.w3m/setup.sh \
    && ./scripts/setup.sh

WORKDIR /home/hikib
ENTRYPOINT "/bin/bash"

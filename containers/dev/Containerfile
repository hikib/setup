FROM alpine:latest
MAINTAINER "hikib <hikib@proton.me>

# ---- SETUP
ENV HOME /home
ENV TZ=Europe/Copenhagen

# ---- APPS
RUN apk update && apk add --no-cache \
    bash \
    curl \
    git \
    tmux \
    tree \
    vim \
    go \
    py3-pip \
    python3 \
    shellcheck \
    tzdata \
    bash-completion \
    w3m

# ---- CONFIG

WORKDIR /dotfiles
RUN git clone https://github.com/hikib/scripts && \
    git clone https://github.com/hikib/dot && \
    ./scripts/uni/setup && \
    ./dot/uni/bash/setup && \
    ./dot/uni/tmux/setup && \
    ./dot/uni/vim/setup && \
    ./dot/uni/w3m/setup

# ---- START IN TMUX
WORKDIR /home
ENTRYPOINT ["/bin/bash", "-l", "-c"]
CMD ["tmux", "new", "-s", "dev"]
